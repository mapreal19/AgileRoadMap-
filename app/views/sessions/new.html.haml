= render 'layouts/top'
= render 'layouts/header'

/ === Content Part ===
.container
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      = form_for :session, url: sessions_path, html: { class:'reg-page' } do |f|
        .reg-header
          %h2 
            = it "login.access"
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-envelope
          = f.email_field :email, class: 'form-control', placeholder: 'Email', required: true
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-unlock
          = f.password_field :password, class: 'form-control', placeholder: it("register.passwd"), required: true
        .row
          .col-md-6
            -#%label.checkbox
              -#%input{type: "checkbox"}/
              -#Stay signed in
          .col-md-6
            = f.submit 'Login', class: 'btn btn-u pull-right'
        %hr/
        %h4 
          = it "login.new" 
        %p
          = link_to it("login.now"), signup_path
        %h4 
          = it "login.forgot_passwd"
        %p
          = link_to it("login.click"), new_password_reset_path
          = it "login.restablish"

